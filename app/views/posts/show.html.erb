

    <div class="image center-block">
      <%= image_tag @post.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>

    <p class="caption">
      <%= @post.release_date %>
    </p>

    <div class="text-center">
      <%= link_to "Edit Kicks", edit_post_path %>
    </div>

    <div class="text-center">
      <%= link_to "Delete", delete_post_path(@post), method: :delete, data: { confirm: "are you sure you want to delete?"} %>
    </div>

    <div class="text-center">
      <%= link_to "Cancel", posts_path %>
    </div>
