
  <div class="show-post">
    <br/>
    <ul class="show-post-content">
      <li class="image"> <%= image_tag @post.image.url(:medium) %> <br/> </li>
      <li> <%= @post.caption %> <br/> </li>
      <li>  <strong> Release Date: </strong><%= @post.release_date.strftime("%A,%B,%d") %> </li>
    </ul>


   <div class="post-comments">
      <%= render partial: 'posts/comment', collection: @post.comments %>
      <%= render partial: 'comments/form' %>
   </div>
 </div>


<% if current_user %>
    <div class="text-center">
      <%= link_to "Edit Kicks", edit_post_path %>
    </div>

    <div class="text-center">
      <%= link_to "Delete", post_path, method: :delete, data: { confirm: "are you sure you want to delete?"} %>
    </div>

    <div class="text-center">
      <%= link_to "Cancel", posts_path %>
    </div>
<% end %>
